<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="SampleTheme" parent="android:Theme.Holo.Light.NoActionBar" />

    <style name="login_edittext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">@dimen/text_height</item>
        <item name="android:paddingLeft">@dimen/drawable_margin</item>
        <item name="android:drawablePadding">@dimen/drawable_margin</item>
    </style>

    <style name="menu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>

    <style name="menu_uer_info_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/menu_user_size</item>
    </style>
</resources>